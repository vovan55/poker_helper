<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edEnterBB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enterBB"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.199"
        android:autofillHints="" />

    <EditText
        android:id="@+id/edPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="@string/enter_position"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edEnterBB"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edEnterBB"
        app:layout_constraintTop_toBottomOf="@+id/edEnterBB"
        android:autofillHints="" />

    <EditText
        android:id="@+id/edCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="@string/enter_cards"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edPosition"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edPosition"
        app:layout_constraintTop_toBottomOf="@+id/edPosition"
        android:autofillHints="" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:hint="@string/tvResult"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/edCards"
        app:layout_constraintStart_toStartOf="@+id/edCards"
        app:layout_constraintTop_toBottomOf="@+id/edCards" />
</androidx.constraintlayout.widget.ConstraintLayout>